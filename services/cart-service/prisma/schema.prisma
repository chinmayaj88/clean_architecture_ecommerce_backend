generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id              String     @id @default(cuid())
  userId          String?    // References auth.users.id (no FK)
  sessionId       String?
  status          String     @default("active") // active, abandoned, converted
  currency        String     @default("USD")
  subtotal        Decimal    @default(0) @db.Decimal(10, 2)
  taxAmount       Decimal    @default(0) @db.Decimal(10, 2)
  shippingAmount  Decimal    @default(0) @db.Decimal(10, 2)
  discountAmount  Decimal    @default(0) @db.Decimal(10, 2)
  totalAmount     Decimal    @default(0) @db.Decimal(10, 2)
  couponCode      String?
  metadata        Json?
  expiresAt       DateTime?
  convertedAt     DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  items           CartItem[]

  @@index([userId])
  @@index([sessionId])
  @@index([status])
  @@index([expiresAt])
  @@index([userId, status])
  @@index([sessionId, status])
  @@map("carts")
}

model CartItem {
  id              String   @id @default(cuid())
  cartId          String
  productId       String   // References product.products.id (no FK)
  variantId       String?  // References product.product_variants.id (no FK)
  productName     String
  productSku      String
  productImageUrl String?
  unitPrice       Decimal  @db.Decimal(10, 2)
  quantity        Int
  totalPrice      Decimal  @db.Decimal(10, 2)
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  cart            Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId, variantId])
  @@index([cartId])
  @@index([productId])
  @@map("cart_items")
}

