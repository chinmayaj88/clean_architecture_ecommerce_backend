# Cart Service Environment Variables
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Service Port
PORT=3004

# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://cart_user:cart_pass@localhost:5436/cart_db

# JWT Secret (required - must be at least 32 characters)
# Used for token verification from auth-service
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Product Service URL
# Used to validate products when adding items to cart
PRODUCT_SERVICE_URL=http://localhost:3003

# Redis Configuration (optional - for caching and distributed rate limiting)
# Leave empty to disable Redis caching
REDIS_URL=redis://localhost:6379

# Cart Configuration
# Number of days before cart expires (default: 30)
CART_EXPIRATION_DAYS=30

# Maximum number of items allowed in a cart (default: 100)
MAX_CART_ITEMS=100

# Maximum quantity per cart item (default: 99)
MAX_ITEM_QUANTITY=99

# Rate Limiting
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
# Request timeout in milliseconds (default: 30000 = 30 seconds)
REQUEST_TIMEOUT_MS=30000

# Shutdown timeout in milliseconds (default: 30000 = 30 seconds)
SHUTDOWN_TIMEOUT_MS=30000

# Maximum request size in MB (default: 10)
MAX_REQUEST_SIZE_MB=10

# CORS Configuration (optional)
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://example.com
ALLOWED_ORIGINS=

# Logging
# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info
