# Return Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3010
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://return_user:return_pass@localhost:5442/return_db?schema=public

# JWT Secret (shared with auth-service for token verification)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Request Size
MAX_REQUEST_SIZE_MB=10

# Service URLs
ORDER_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005

# Service API Keys (optional)
ORDER_SERVICE_API_KEY=
PAYMENT_SERVICE_API_KEY=

# Internal Service Tokens (optional)
ORDER_SERVICE_INTERNAL_TOKEN=
PAYMENT_SERVICE_INTERNAL_TOKEN=

# AWS/Event Publishing
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SNS_TOPIC_ARN=
SQS_QUEUE_URL=
EVENT_PUBLISHER_TYPE=mock
EVENT_CONSUMER_TYPE=mock
LOCALSTACK_ENDPOINT=http://localhost:4566
