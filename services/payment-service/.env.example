# Server
NODE_ENV=development
PORT=3006

# Database
DATABASE_URL=postgresql://payment_user:payment_pass@localhost:5438/payment_db

# JWT (shared secret with auth-service)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Service URLs
ORDER_SERVICE_URL=http://localhost:3005
USER_SERVICE_URL=http://localhost:3002

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Payment Providers
PAYMENT_PROVIDER=mock
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# AWS/Event Publishing
AWS_REGION=us-east-1
SNS_TOPIC_ARN=
SQS_QUEUE_URL=
EVENT_PUBLISHER_TYPE=mock
EVENT_CONSUMER_TYPE=mock
LOCALSTACK_ENDPOINT=http://localhost:4566

# Logging
LOG_LEVEL=info

# Timeouts
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# CORS
ALLOWED_ORIGINS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
