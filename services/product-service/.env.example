# Product Service Environment Variables
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Service Port
PORT=3003

# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://product_user:product_pass@localhost:5434/product_db

# JWT Secret (optional - for token verification from auth-service)
# Must be at least 32 characters if provided
# Should match the JWT_SECRET used in auth-service
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Redis Configuration (optional - for caching)
# Leave empty to disable Redis caching
REDIS_URL=redis://localhost:6379

# Auth Service URL (optional)
# Used for user authentication if needed
AUTH_SERVICE_URL=http://localhost:3001

# AWS Configuration
# AWS Region (default: us-east-1)
AWS_REGION=us-east-1

# AWS SNS Topic ARN (optional - for event publishing)
# Leave empty to use mock event publisher
SNS_TOPIC_ARN=

# AWS SQS Queue URL (optional - for event consumption)
# Leave empty if not using SQS
SQS_QUEUE_URL=

# Event Publisher Type (optional)
# Options: mock, sns (default: mock)
# Use 'mock' for local development, 'sns' for production
EVENT_PUBLISHER_TYPE=mock

# LocalStack Endpoint (optional - for local AWS services emulation)
# Use this when running LocalStack for local development
LOCALSTACK_ENDPOINT=http://localhost:4566

# Request Configuration
# Request timeout in milliseconds (default: 30000 = 30 seconds)
REQUEST_TIMEOUT_MS=30000

# Shutdown timeout in milliseconds (default: 30000 = 30 seconds)
SHUTDOWN_TIMEOUT_MS=30000

# Maximum request size in MB (default: 10)
MAX_REQUEST_SIZE_MB=10

# CORS Configuration (optional)
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://example.com
ALLOWED_ORIGINS=

# Logging
# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info
