# Notification Service Environment Variables

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3007

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/notification_db?schema=public

# ============================================
# JWT (Optional - for token verification with auth-service)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ============================================
# Service URLs
# ============================================
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
USER_SERVICE_API_KEY=
USER_SERVICE_INTERNAL_TOKEN=
FRONTEND_URL=http://localhost:3000

# ============================================
# Redis (Optional - for rate limiting and caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Email Provider Configuration
# ============================================
# Options: mock, sendgrid, nodemailer, aws-ses
EMAIL_PROVIDER=mock

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP Configuration (if EMAIL_PROVIDER=nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ecommerce.com
SMTP_FROM_NAME=E-Commerce Platform

# AWS SES Configuration (if EMAIL_PROVIDER=aws-ses)
AWS_SES_REGION=us-east-1

# ============================================
# SMS Provider Configuration
# ============================================
# Options: mock, twilio
SMS_PROVIDER=mock

# Twilio Configuration (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Push Notification Provider (Future)
# ============================================
# Options: mock, fcm, apns
PUSH_PROVIDER=mock

# FCM Configuration (if PUSH_PROVIDER=fcm)
FCM_SERVER_KEY=your-fcm-server-key

# APNS Configuration (if PUSH_PROVIDER=apns)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.yourapp.bundle
APNS_PRIVATE_KEY=your-apns-private-key

# ============================================
# AWS Configuration (for SQS/SNS)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# SNS Topic ARN (for publishing events)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:notifications

# SQS Queue URL (for consuming events)
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/notification-events

# Event Publisher/Consumer Type
# Options: mock, sns (for publisher), mock, sqs (for consumer)
EVENT_PUBLISHER_TYPE=mock
EVENT_CONSUMER_TYPE=mock

# LocalStack Configuration (for local development)
LOCALSTACK_ENDPOINT=http://localhost:4566

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Timeouts
# ============================================
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Notification Settings
# ============================================
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=1000
MAX_NOTIFICATIONS_PER_BATCH=100
